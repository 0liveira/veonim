{
  "name": "veonim",
  "version": "0.1.0",
  "description": "vim end game",
  "main": "build/main.js",
  "scripts": {
    "clean": "rm -rf build",
    "clean-all": "npm run clean && rm -rf dist && rm -rf bindeps",
    "fixexp": "sed -i '' -e 's/Object.defineProperty(exports, \"__esModule\", { value: true });//g' build/workers/*.js",
    "typescript": "tsc -p tsconfig.json && tsc -p tsconfig.workers.json",
    "watch": "tsc -p tsconfig.json --watch",
    "build": "npm run typescript && npm run fixexp && cp src/index.html build/index.html",
    "rebuild": "npm run clean && npm run build",
    "start": "electron build/main.js",
    "gen-api": "node tools/gen-api.js",
    "mkdir-bin": "mkdir bindeps && mkdir bindeps/mac bindeps/linux bindeps/win",
    "bins-mac": "npm i @veonim/neovim@0.0.5-mac @veonim/ripgrep@0.0.1-win --prefix ./bindeps/mac",
    "bins-linux": "npm i @veonim/neovim@0.0.5-linux @veonim/ripgrep@0.0.1-win --prefix ./bindeps/linux",
    "bins-win": "npm i @veonim/neovim@0.0.5-win @veonim/ripgrep@0.0.1-win --prefix ./bindeps/win",
    "bins": "npm run bins-mac && npm run bins-win && npm run bins-linux",
    "pack-mac": "npm run bins-mac && electron-builder -m",
    "pack-win": "npm run bins-win && electron-builder -w",
    "pack-linux": "npm run bins-linux && electron-builder -l",
    "pack": "npm run bins && electron-builder -mwl",
    "release": "npm run clean-all && npm run build && npm run mkdir-bin && npm run pack"
  },
  "build": {
    "productName": "veonim",
    "appId": "com.veonim.veonim",
    "directories": {
      "buildResources": "art"
    },
    "files": [
      "build/**",
      "!**/*.map"
    ],
    "asar": false,
    "mac": {
      "artifactName": "${productName}-${version}-macos.${ext}",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "files": [
        {
          "from": "bindeps/mac/node_modules",
          "to": "node_modules"
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${arch}-linux.${ext}",
      "maintainer": "veonim",
      "target": [
        "tar.gz"
      ],
      "files": [
        {
          "from": "bindeps/linux/node_modules",
          "to": "node_modules"
        }
      ]
    },
    "win": {
      "target": [
        "zip"
      ],
      "files": [
        {
          "from": "bindeps/win/node_modules",
          "to": "node_modules"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/veonim/veonim.git"
  },
  "author": "Deomitrus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/veonim/veonim/issues"
  },
  "homepage": "https://github.com/veonim/veonim#readme",
  "dependencies": {
    "fuzzaldrin-plus": "0.4.1",
    "huu": "2.0.1",
    "hyperapp": "0.10.1",
    "msgpack-lite": "0.1.26",
    "node-watch": "0.5.5",
    "through": "2.3.8"
  },
  "devDependencies": {
    "@types/fuzzaldrin-plus": "0.0.1",
    "@types/msgpack-lite": "0.1.4",
    "@types/node": "8.0.12",
    "@types/through": "0.0.28",
    "@veonim/neovim": "0.0.5-mac",
    "@veonim/ripgrep": "0.0.1-mac",
    "electron": "1.6.11",
    "electron-builder": "19.18.1",
    "typescript": "2.4.2"
  }
}
