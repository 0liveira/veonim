{
  "name": "veonim",
  "version": "0.5.1",
  "description": "vim end game",
  "main": "build/main.js",
  "scripts": {
    "test": "mocha test/unit",
    "test-watch": "npm run test -- -w",
    "html": "cp src/index.html build/index.html",
    "runtime": "cp -r runtime build/runtime",
    "clean": "rm -rf build",
    "clean-all": "npm run clean && rm -rf dist && rm -rf bindeps",
    "fixexp": "jscodeshift -t tools/dummy-exports.js build/workers",
    "typescript": "tsc -p tsconfig.json && tsc -p tsconfig.workers.json",
    "watch": "node tools/watch-build.js",
    "build": "npm run typescript && npm run fixexp && npm run html && npm run runtime",
    "rebuild": "npm run clean && npm run build",
    "start": "electron build/main.js",
    "gen-api": "node tools/gen-api.js",
    "bins-mac": "mkdir -p bindeps/mac && npm i -f @veonim/neovim-mac@0.0.2 @veonim/ripgrep-mac@0.0.1 --prefix ./bindeps/mac",
    "bins-linux": "mkdir -p bindeps/linux && npm i -f @veonim/neovim-linux@0.0.2 @veonim/ripgrep-linux@0.0.1 --prefix ./bindeps/linux",
    "bins-win": "mkdir -p bindeps/win && npm i -f @veonim/neovim-win@0.0.2 @veonim/ripgrep-win@0.0.1 --prefix ./bindeps/win",
    "bins": "npm run bins-mac && npm run bins-win && npm run bins-linux",
    "pack-mac": "npm run bins-mac && electron-builder -m",
    "pack-win": "npm run bins-win && electron-builder -w",
    "pack-linux": "npm run bins-linux && electron-builder -l",
    "pack": "npm run bins && electron-builder -mwl",
    "release": "npm run clean-all && npm run build && npm run pack",
    "release-mac": "npm run clean-all && npm run build && npm run pack-mac",
    "release-win": "npm run clean-all && npm run build && npm run pack-win",
    "release-linux": "npm run clean-all && npm run build && npm run pack-linux"
  },
  "build": {
    "productName": "veonim",
    "appId": "com.veonim.veonim",
    "directories": {
      "buildResources": "art"
    },
    "files": [
      "build/**",
      "!**/*.map"
    ],
    "asar": false,
    "mac": {
      "artifactName": "${productName}-${version}-macos.${ext}",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "files": [
        {
          "from": "bindeps/mac/node_modules",
          "to": "node_modules"
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${arch}-linux.${ext}",
      "maintainer": "veonim",
      "target": [
        "tar.gz"
      ],
      "files": [
        {
          "from": "bindeps/linux/node_modules",
          "to": "node_modules"
        }
      ]
    },
    "win": {
      "target": [
        "zip"
      ],
      "files": [
        {
          "from": "bindeps/win/node_modules",
          "to": "node_modules"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/veonim/veonim.git"
  },
  "author": "Deomitrus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/veonim/veonim/issues"
  },
  "homepage": "https://github.com/veonim/veonim#readme",
  "dependencies": {
    "@veonim/neovim": "0.0.13",
    "@veonim/ripgrep": "0.0.5",
    "@veonim/plugin-manager": "0.4.2",
    "fuzzaldrin-plus": "0.4.1",
    "huu": "2.0.1",
    "hyperapp": "0.10.1",
    "msgpack-lite": "0.1.26",
    "node-watch": "0.5.5",
    "remove-markdown": "0.2.2",
    "vscode-jsonrpc": "3.5.0",
    "vscode-languageserver-types": "3.4.0"
  },
  "devDependencies": {
    "@types/fuzzaldrin-plus": "0.0.1",
    "@types/msgpack-lite": "0.1.4",
    "@types/node": "8.0.53",
    "electron": "1.7.9",
    "electron-builder": "19.46.4",
    "jscodeshift": "0.3.32",
    "mocha": "4.0.1",
    "proxyquire": "1.8.0",
    "typescript": "2.5.3"
  }
}
