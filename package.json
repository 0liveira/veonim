{
  "name": "veonim",
  "version": "0.1.0",
  "description": "vim end game",
  "main": "build/main.js",
  "scripts": {
    "clean": "rm -rf build",
    "fixexp": "sed -i '' -e 's/Object.defineProperty(exports, \"__esModule\", { value: true });//g' build/workers/*.js",
    "typescript": "tsc -p tsconfig.json && tsc -p tsconfig.workers.json",
    "watch": "tsc -p tsconfig.json --watch",
    "build": "npm run typescript && npm run fixexp && cp src/index.html build/index.html",
    "rebuild": "npm run clean && npm run build",
    "start": "electron build/main.js",
    "gen-api": "node tools/gen-api.js",
    "create-bin-dirs": "mkdir bindeps && mkdir bindeps/mac bindeps/linux bindeps/win",
    "dl-all-bins": "npm i @veonim/neovim@0.0.5-mac --prefix ./bindeps/mac && npm i @veonim/neovim@0.0.5-linux --prefix ./bindeps/linux && npm i @veonim/neovim@0.0.5-win --prefix ./bindeps/win",
    "copy-icons": "cp icons/icon.icns icons/icon.ico build",
    "pack-mac": "npm run copy-icons && electron-builder -m",
    "pack-win": "npm run copy-icons && electron-builder -w",
    "pack-linux": "npm run copy-icons && electron-builder -l",
    "pack": "npm run copy-icons && electron-builder -mwl",
    "release": "npm run rebuild && npm run create-bin-dirs && npm run dl-all-bins && npm run pack"
  },
  "build": {
    "productName": "veonim",
    "appId": "com.deomitrus.veonim",
    "files": [
      "build/**",
      "!**/*.map"
    ],
    "asar": false,
    "mac": {
      "artifactName": "${productName}-${version}-macos.${ext}",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "files": [
        {
          "from": "bindeps/mac/node_modules",
          "to": "node_modules"
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${arch}-linux.${ext}",
      "maintainer": "deomitrus",
      "target": [
        "tar.gz"
      ],
      "files": [
        {
          "from": "bindeps/linux/node_modules",
          "to": "node_modules"
        }
      ]
    },
    "win": {
      "target": [
        "zip"
      ],
      "files": [
        {
          "from": "bindeps/win/node_modules",
          "to": "node_modules"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deomitrus/veonim.git"
  },
  "author": "Deomitrus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deomitrus/veonim/issues"
  },
  "homepage": "https://github.com/deomitrus/veonim#readme",
  "dependencies": {
    "chokidar": "1.7.0",
    "fuzzaldrin-plus": "0.4.1",
    "huu": "2.0.1",
    "hyperapp": "0.10.1",
    "msgpack-lite": "0.1.26",
    "through": "2.3.8"
  },
  "devDependencies": {
    "@types/chokidar": "1.7.1",
    "@types/fuzzaldrin-plus": "0.0.1",
    "@types/msgpack-lite": "0.1.4",
    "@types/node": "8.0.12",
    "@types/through": "0.0.28",
    "@veonim/neovim": "0.0.5-mac",
    "@veonim/ripgrep": "0.0.1-mac",
    "electron": "1.6.11",
    "electron-builder": "19.18.1",
    "require-reload": "0.2.2",
    "typescript": "2.4.2"
  }
}
